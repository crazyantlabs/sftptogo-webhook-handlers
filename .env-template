# SFTP Configuration
SFTP_HOST=example.sftptogo.com
SFTP_PORT=22
SFTP_USER=username
SFTP_PASSWORD=your-password

## PGP Decryption Handler
# Webhook Verification Secret
DECRYPT_WEBHOOK_SECRET=your-shared-secret

# PGP Private Key (Base64 Encoded or Inline if small)
PGP_PRIVATE_KEY="-----BEGIN PGP PRIVATE KEY-----\n...\n-----END PGP PRIVATE KEY-----"
PGP_PRIVATE_KEY_PASSPHRASE=your-passphrase

# Upload Target Path
DECRYPT_UPLOAD_PATH=decrypted
DECRYPT_UPLOAD_PATH_IS_RELATIVE=true

# Delete Original After Upload
DECRYPT_DELETE_AFTER_UPLOAD=true

## PGP Encryption Handler
# Webhook Verification Secret
ENCRYPT_WEBHOOK_SECRET=your-shared-secret

# PGP Public Keys (One or more recipient public keys, armored)
PGP_PUBLIC_KEYS="-----BEGIN PGP PUBLIC KEY-----\n...\n-----END PGP PUBLIC KEY-----"

# Optional Signing Configuration
PGP_SIGN_PRIVATE_KEY="-----BEGIN PGP PRIVATE KEY-----\n...\n-----END PGP PRIVATE KEY-----"
PGP_SIGN_PASSPHRASE=your-signing-passphrase

# Upload Target Path
ENCRYPT_UPLOAD_PATH=encrypted
ENCRYPT_UPLOAD_PATH_IS_RELATIVE=true

# Encryption Settings
ENCRYPT_EXTENSION=.gpg
ENCRYPT_ASCII_ARMOR=false

# File Filtering
ENCRYPT_INCLUDE_GLOB=**/*
ENCRYPT_EXCLUDE_GLOB=**/*.{gpg,pgp,asc}

# Processing Options
ENCRYPT_OVERWRITE=false
ENCRYPT_DELETE_AFTER_UPLOAD=false
